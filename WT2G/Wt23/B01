<HTML>
<HEAD>
<TITLE>JavaScript Illustrations by Clyde E. Collins</TITLE>
<SCRIPT LANGUAGE="JavaScript">
<!--- hide script from old browsers
function compute(obj)
{
  if (obj.expr.value)
      {obj.result.value=eval(obj.expr.value);}
  else 
      {alert( "Please fill in an expression.");}
}

function scrollit_r21(seed)
{
   var m1   =  "  Haversine Enterprises  **";
   var m2   =  "  http://www.magicdragon.com/HaversineEnterprises/  **";
   var m3   =  "  Web Design  Graphics  Programming  **";
   var msg  =     m1 + m2 + m3;
   var out  =  " ";
   var c    =  1;
   
   if (seed == 100)
   { 
      clearTimeout(timerTwo);
      return;
    }
   if (100 < seed)
   {
      seed--;
      var cmd="scrollit_r21(" + seed + ")";
      timerTwo=window.setTimeout(cmd,100);
    }
    else if ((seed <= 100) && (0 < seed ) )
    {
       for ( c=0; c < seed; c++ ) { out += " "; }
       out+=msg;
       seed--;
       var cmd="scrollit_r21(" + seed + ")";
       window.status=out;
       timerTwo = window.setTimeout(cmd,100);
     }
     else if ( seed <= 0 )
     {
        if ( -seed < msg.length )
        {
           out += msg.substring(-seed,msg.length);
           seed--;
           var cmd = "scrollit_r21(" + seed + ")";
           window.status = out;
           timerTwo = window.setTimeout(cmd,100);
         }
         else
        {
            window.status = " ";
            timerTwo = window.setTimeout("scrollit_r21(50)",75);
         }
     }
}
// end hiding from old browsers -->
</SCRIPT>
</HEAD>
<BODY BGCOLOR="coral">
<H2>Examples of JavaScript:</H2>

<FORM NAME="evalform">
Enter an expression: <INPUT TYPE=text NAME="expr" SIZE=40 ><BR>
<INPUT TYPE="button" VALUE="Click to Evaluate" onClick="compute(this.form)" >
Result of Evaluation: <INPUT TYPE=text NAME="result" SIZE=20 >
<BR>
<BR>
<INPUT TYPE="button" VALUE="Click For Scroll" onClick="scrollit_r21(85)" >
<INPUT TYPE="button" VALUE="Click For Stop Scroll" onClick="scrollit_r21(100)" >
</FORM>
