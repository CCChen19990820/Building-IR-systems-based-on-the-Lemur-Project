<area coords="101,41,203,66"href="/prices_ci.html">
<area coords="100,68,203,92"href="/managers_ci.html">
<area coords="100,95,203,120"href="/performance_ci.html">
<area coords="316,14,426,39"href="/about_hansberger.html">
<area coords="316,41,427,66"href="/prices_hansberger.html">
<area coords="316,67,427,93"href="/managers_hansberger.html">
<area coords="316,95,427,120"href="/performance_hansberger.html">
<area coords="539,14,643,39"href="/about_sector.html">
<area coords="539,41,642,65"href="/prices_sector.html">
<area coords="539,68,642,93"href="/managers_sector.html">
<area coords="539,94,643,120"href="/performance_sector.html">
<area coords="4,137,94,160"href="/home.html">
<area coords="97,137,187,160"href="/perspective.html">
<area coords="192,137,280,161"href="/cinews.html">
<area coords="285,137,373,161"href="/feedback.html">
