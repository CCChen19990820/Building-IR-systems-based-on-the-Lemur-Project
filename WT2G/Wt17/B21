	      <AREA SHAPE="RECT" COORDS="180,2,259,28" HREF="http://www.lycos.com/pplfndr.html" TARGET="_top">
		<AREA SHAPE="RECT" COORDS="266,2,339,28" HREF="http://www.lycos.com/roadmap.html" TARGET="_top">
		  <AREA SHAPE="RECT" COORDS="343,1,454,27" HREF="http://a2z.lycos.com" TARGET="_top">
	</MAP>

	<CENTER>
      <TABLE BORDER=1 CELLPADDING=0 CELLSPACING=0>
	<TD VALIGN=TOP ALIGN=CENTER WIDTH=480>

	  <A href="http://www.lycos.com/" TARGET="_top">

	    <img src="gifs/search_lycos1.gif" HEIGHT=104 WIDTH=457 BORDER=0>
	  </A>
