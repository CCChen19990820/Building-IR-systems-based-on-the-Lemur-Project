<SCRIPT LANGUAGE="javascript">
<!-- hide form browsers
// Status bar message cycler -- AJR '96

	numMessages = 5;
	delay = 3000;

	messages = MakeArray(numMessages);
        messages[1] = "Welcome to Cotton Incorporated on the World Wide Web";
        messages[2] = "The Cotton Online Resource is dedicated to providing";
        messages[3] = "a wealth of information about cotton that we have";
	messages[4] = "collected and created, in an easy to find and publicly";
	messages[5] = "accessable format.";

	current = 1;

	function LoopMessages() {
		status = messages[current];
		if (current == numMessages) {
			current = 1;
		}
		else {
			current ++;
		}
		setTimeout('LoopMessages();',delay);
	}

// we're back -->
</SCRIPT>

