<HEAD>

<!-- $MVD$:APP("MicroVision WebExpress") -->
<TITLE>The Counseling Psychology Specialization</TITLE>
<META NAME="GENERATOR" CONTENT="Internet Assistant for Word 1.0Z"><META NAME="AUTHOR"
 CONTENT="Nelson Wood"></HEAD>

<!-- $MVD$:COLOR("2","0","Black") -->
<!-- $MVD$:COLOR("3","ff0000","Blue") -->
<!-- $MVD$:COLOR("4","ffff00","Cyan") -->
<!-- $MVD$:COLOR("5","ff00","Green") -->
<!-- $MVD$:COLOR("6","ff00ff","Magenta") -->
