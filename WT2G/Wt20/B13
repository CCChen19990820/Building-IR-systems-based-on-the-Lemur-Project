<!-- received="Mon Jan 01 01:01:01 1990 PST" -->
<!-- sent="Thu, 11 Feb 93 20:23:10 CST" -->
<!-- name="patricio d navia" -->
<!-- email="pdnavia@midway.uchicago.edu" -->
