<!-- name="Ray Mialki" -->
<!-- email="rm1g+@andrew.cmu.edu" -->
<!-- subject="Re:  Stars in my Crown" -->
<!-- id="8fpQkci00WB=EMqapx@andrew.cmu.edu" -->
