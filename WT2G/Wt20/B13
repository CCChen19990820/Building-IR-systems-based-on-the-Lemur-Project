<!-- received="Mon Jan 01 01:01:01 1990 PST" -->
<!-- sent="Wed,  3 Feb 1993 22:50:08 -0500 (EST)" -->
<!-- name="Steven Timm" -->
<!-- email="st0o+@andrew.cmu.edu" -->
<!-- subject="On the Text of the New Testament" -->
<!-- id="YfQ99k600YUoQManlw@andrew.cmu.edu" -->
