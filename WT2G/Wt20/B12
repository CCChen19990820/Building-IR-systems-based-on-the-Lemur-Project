<!-- received="Mon Jan 01 01:01:01 1990 PST" -->
<!-- sent="Thu, 16 Apr 92 11:13:18 EST" -->
<!-- name="Ruben Gonzalez" -->
<!-- email="ruben@ee.uts.edu.au" -->
<!-- subject="Re: Evangelism in Russia" -->
<!-- id="9204160113.AA07975@europa.ee.uts.edu.au" -->
