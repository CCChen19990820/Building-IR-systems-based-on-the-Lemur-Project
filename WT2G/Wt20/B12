<!-- name="Fritz Guy" -->
<!-- email="fguy@polaris.lasierra.edu" -->
<!-- subject="Re: "Historic Adventism"" -->
<!-- id="Pine.3.05.9304131729.A4041-c100000@polaris.lasierra.edu" -->
