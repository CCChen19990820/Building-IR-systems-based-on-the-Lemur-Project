<!-- received="Fri May 14 08:58:53 1993 PST" -->
<!-- sent="Fri, 14 May 93 08:58:53 EDT" -->
<!-- name="beihl@ncrcol.columbiasc.ncr.com" -->
<!-- email="beihl@ncrcol.columbiasc.ncr.com" -->
