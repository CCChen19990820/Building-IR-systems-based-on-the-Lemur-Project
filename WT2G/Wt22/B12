<!-- Font Tag --><FONT SIZE=3><CENTER>MEAL ALLOWANCE FOR NON-OVERNIGHT TRAVEL<BR>
Reimbursement for Meals</CENTER></FONT>

<!-- Table Tag --><TABLE CELLSPACING=3 CELLPADDING=3 BORDER=3>
<TR><TD></TD><TD ALIGN=CENTER>WITHOUT RECEIPTS</TD><TD ALIGN=CENTER>WITHOUT RECEIPTS</TD><TD ALIGN=CENTER>WITH RECEIPTS</TD><TD ALIGN=CENTER>WITH RECEIPTS</TD></TR>
<TR><TD ALIGN=LEFT>LOCATION</TD><TD ALIGN=RIGHT>BREAKFAST</TD><TD ALIGN=RIGHT>DINNER</TD><TD ALIGN=RIGHT>BREAKFAST</TD><TD ALIGN=RIGHT>DINNER</TD></TR>
<TR><TD ALIGN=LEFT>Albany, Binghamton</TD><TD ALIGN=RIGHT>3.50</TD><TD ALIGN=RIGHT>9.50</TD><TD ALIGN=RIGHT>6.00</TD><TD ALIGN=RIGHT>24.00</TD></TR>
<TR><TD ALIGN=LEFT>Buffalo, Rochester</TD><TD ALIGN=RIGHT>3.50</TD><TD ALIGN=RIGHT>9.50</TD><TD ALIGN=RIGHT>7.00</TD><TD ALIGN=RIGHT>27.00</TD></TR>
<TR><TD ALIGN=LEFT>Syracuse</TD><TD ALIGN=RIGHT>3.50</TD><TD ALIGN=RIGHT>9.50</TD><TD ALIGN=RIGHT>6.00</TD><TD ALIGN=RIGHT>24.00</TD></TR>
