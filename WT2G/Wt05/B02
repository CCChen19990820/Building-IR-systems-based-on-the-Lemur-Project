function scrollit_r2l(seed)
{
        var msg0 = "                                                    "; 
        var msg1 = "       Stay tuned for our Java and VRML addtions....";
        var msg2 = ".....Ask about what we can do to give YOUR web pages";
        var msg3 = " a HIGH OCTANE BOOST.";
        var msg=msg0+msg1+msg2+msg3;
        var out = " ";
        var c   = 1;

        if (seed > 100) {
                seed--;
                var cmd="scrollit_r2l(" + seed + ")";
                timerTwo=window.setTimeout(cmd,65);
        }
        else if (seed <= 100 && seed > 0) {
                for (c=0 ; c < seed ; c++) {
                        out+=" ";
                }
                out+=msg;
                seed--;
                var cmd="scrollit_r2l(" + seed + ")";
                    window.status=out;
                timerTwo=window.setTimeout(cmd,65);
        }
        else if (seed <= 0) {
                if (-seed < msg.length) {
                        out+=msg.substring(-seed,msg.length);
                        seed--;
                        var cmd="scrollit_r2l(" + seed + ")";
                        window.status=out;
                        timerTwo=window.setTimeout(cmd,65);
 }
                else {
                        window.status=" ";
                        timerTwo=window.setTimeout("scrollit_r2l(65)",100);
                }
        }
}
