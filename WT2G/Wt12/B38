<!--

function correctinput(form) 
{
	the_string = form.query.value;
	
	/* check for empty query. */

	if (the_string == "")
	{
		validatePrompt(form, "Please provide at least one keyword in your search query");
		return (false);
	}

	/* Now go through the string one character at a time.
	   Change all weird characters to spaces. */

	var length;
	var character;
	var new_string = "";
	length = the_string.length;

	for (var i=0; i<length; i++)
	{
		character = the_string.charAt(i);
		if ((character == ',') ||
		    (character == '"'))
		{
			character = ' ';
		}
		new_string = new_string + character;
	}
	form.query.value = new_string;
	return (true);
}

function runSubmit(form,button)
{
	if (!correctinput(form))
		return;
	else
	{
		document.test.submit();
	}
	return;
}

function validatePrompt(Ctrl, promptstring)
{
	alert (promptstring);
	Ctrl.query.focus();
	return;
}

//--> 
</script>

