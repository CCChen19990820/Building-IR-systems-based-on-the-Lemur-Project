&nbsp;&nbsp;function&nbsp;char_seq_monotonic_induct_help&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;measure&nbsp;len&nbsp;s1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;if&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;s1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;not&nbsp;head&nbsp;s1&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;char_seq_monotonic_induct_help&nbsp;(tail&nbsp;s1,&nbsp;tail&nbsp;s2,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;elseif&nbsp;has_char&nbsp;(s1,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;char_seq_monotonic_induct_help&nbsp;(char_tail&nbsp;(s1,&nbsp;chsz),<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;char_tail&nbsp;(s2,&nbsp;chsz),&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;elseif&nbsp;not&nbsp;null&nbsp;s1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;char_seq_monotonic_induct_help&nbsp;(char_tail&nbsp;(s1,&nbsp;chsz),<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;char_tail&nbsp;(s2,&nbsp;chsz),&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;true&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_seq_monotonic_induct_help;<BR>
&nbsp;&nbsp;reduce;<BR>
&nbsp;&nbsp;rewrite;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;axiom&nbsp;char_seq_monotonic&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
