&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;s&nbsp;=&nbsp;char_tack&nbsp;(char_head&nbsp;(s,&nbsp;chsz),&nbsp;char_tail&nbsp;(s,&nbsp;chsz))<BR>
&nbsp;&nbsp;end&nbsp;has_char_construction;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;is_char_construction&nbsp;(c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;c&nbsp;=&nbsp;char_head&nbsp;(char_tack&nbsp;(c,&nbsp;.&lt;&gt;.),&nbsp;chsz)<BR>
&nbsp;&nbsp;end&nbsp;is_char_construction;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;function&nbsp;char_size&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;measure&nbsp;len&nbsp;s<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;if&nbsp;has_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;1&nbsp;+&nbsp;char_size&nbsp;(char_tail&nbsp;(s,&nbsp;chsz),&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;elseif&nbsp;not&nbsp;null&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;char_size&nbsp;(tail&nbsp;s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;0&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;end&nbsp;char_size;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;not_empty_size_ge_0&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;char_size&nbsp;(s,&nbsp;chsz)&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;end&nbsp;not_empty_size_ge_0;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;has_char_size_gt_0&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;not&nbsp;char_size&nbsp;(s,&nbsp;chsz)&nbsp;&lt;=&nbsp;0<BR>
&nbsp;&nbsp;end&nbsp;has_char_size_gt_0;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;int_char_size&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
