&nbsp;&nbsp;&nbsp;&nbsp;</TT>
<B>&lt;</B><I>snd_char specification</I><B>&gt;</B><B>[</B><A HREF="node150.html#maclab180">180</A><B>]</B><A NAME=12980>&#160;</A> <TT></TT><TT><BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;pvar&nbsp;sent&nbsp;:&nbsp;bool&nbsp;:=&nbsp;false<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;poll_snd_char(st,chn,chr,sent,cntdwn)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;loop<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;invariant&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;cntdwn&nbsp;&lt;&nbsp;cntdwn_0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;cntdwn&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;if&nbsp;sent&nbsp;and&nbsp;cntdwn&gt;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;hist(st)&nbsp;=&nbsp;hist(st_0)&nbsp;&nbsp;.&lt;chn.</TT>
<B>&lt;</B><I>Contents</I><B>&gt;</B><B>[</B><A HREF="node149.html#maclab143">143</A><B>]</B><A NAME=12989>&#160;</A>( ` <TT>chr</TT>
') <TT>&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;hist(st)=hist(st_0)&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;measure&nbsp;cntdwn<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;exit&nbsp;when&nbsp;sent&nbsp;or&nbsp;cntdwn=0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;poll_snd_char(st,chn,chr,sent,cntdwn)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;loop<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;snd_char;</TT>
<P>
This macro is invoked in definition <A HREF="node169.html#maclab195">195</A>.<P>
<P>
<P>
<P>
<P>
<A NAME="maclab182">&#160;</A>
