&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;flatten_tack&nbsp;(e,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;istrace&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;flatten&nbsp;(e&nbsp;]-&nbsp;s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;(if&nbsp;is_char(e,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;(startbit&nbsp;]-&nbsp;e)&nbsp;&nbsp;(stopbit&nbsp;]-&nbsp;flatten&nbsp;(s,chsz))<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;.&lt;&gt;.&nbsp;end&nbsp;if)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;flatten_tack;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;subseq_flatten_char_tail&nbsp;(bs,cs,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;cs<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;head&nbsp;bs&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;bs&nbsp;.&lt;=.&nbsp;flatten(cs,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(char_tail(bs,chsz)&nbsp;.&lt;=.&nbsp;flatten(tail&nbsp;cs,chsz))&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;subseq_flatten_char_tail;<BR>
&nbsp;&nbsp;</TT><TT><BR>
