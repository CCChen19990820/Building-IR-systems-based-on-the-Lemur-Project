&nbsp;&nbsp;end&nbsp;not_has_char_bits_sub_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;not_has_char_not_char&nbsp;(c,&nbsp;e,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;stopbit&nbsp;=&nbsp;e<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(startbit&nbsp;]-&nbsp;(c&nbsp;&nbsp;e&nbsp;]-&nbsp;s),&nbsp;chsz)&nbsp;=&nbsp;false<BR>
&nbsp;&nbsp;end&nbsp;not_has_char_not_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;not_has_char_not_char_2&nbsp;(c,&nbsp;e,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;head&nbsp;c&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;not&nbsp;null&nbsp;c<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(tail&nbsp;c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;not&nbsp;stopbit&nbsp;=&nbsp;e<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(c&nbsp;&nbsp;e&nbsp;]-&nbsp;s,&nbsp;chsz)&nbsp;=&nbsp;false<BR>
