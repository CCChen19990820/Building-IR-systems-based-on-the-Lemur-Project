&nbsp;&nbsp;rule&nbsp;not_has_char_sub_char_4&nbsp;(s,&nbsp;t,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;(len&nbsp;s)&nbsp;+&nbsp;(len&nbsp;t)&nbsp;&lt;=&nbsp;chsz&nbsp;+&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;t&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(s&nbsp;&nbsp;t,&nbsp;chsz)&nbsp;=&nbsp;false<BR>
&nbsp;&nbsp;end&nbsp;not_has_char_sub_char_4;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_append_not_full_char_single&nbsp;(b,s,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;b&nbsp;in&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;(len&nbsp;current_char(s,chsz))&nbsp;&lt;=&nbsp;chsz<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq(s&nbsp;&nbsp;.&lt;b&gt;.,chsz)&nbsp;=&nbsp;char_seq(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_seq_append_not_full_char_single;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_append_not_full_char&nbsp;(s,t,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;t&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;(len&nbsp;t)&nbsp;&lt;=&nbsp;chsz&nbsp;+&nbsp;1&nbsp;-&nbsp;(len&nbsp;current_char(s,chsz))<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq(s&nbsp;&nbsp;t,chsz)&nbsp;=&nbsp;char_seq(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_seq_append_not_full_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;head_tail_tack_combine_2&nbsp;(b,s1,s2)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;s1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;b&nbsp;=&nbsp;head&nbsp;s1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(b&nbsp;]-&nbsp;(tail&nbsp;(s1&nbsp;&nbsp;s2)))<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;s1&nbsp;&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;head_tail_tack_combine_2;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;current_char_append_not_full_char_single&nbsp;(b,s,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;b&nbsp;in&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;current_char(s&nbsp;&nbsp;.&lt;b&gt;.,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;current_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;(len&nbsp;current_char(s,chsz))&nbsp;&lt;=&nbsp;chsz&nbsp;then<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;current_char(s,chsz)&nbsp;&nbsp;.&lt;b&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;elseif&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;null&nbsp;current_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;b=startbit&nbsp;then<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;.&lt;startbit&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;.&lt;&gt;.&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;current_char_append_not_full_char_single;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;not_null_current_char_head&nbsp;(s,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;current_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(head&nbsp;current_char(s,chsz))&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;not_null_current_char_head;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;len_current_char_bound(s,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(len&nbsp;current_char(s,chsz))&nbsp;&lt;=&nbsp;len&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;len_current_char_bound;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;current_char_append_not_full_char_null&nbsp;(s,t,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;t&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;null&nbsp;current_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;current_char(s&nbsp;&nbsp;t,chsz)&nbsp;=&nbsp;current_char(t,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;current_char_append_not_full_char_null;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;current_char_append_not_full_char&nbsp;(s,t,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;t&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;not&nbsp;null&nbsp;current_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;(len&nbsp;current_char(s,chsz))&nbsp;&lt;=&nbsp;chsz&nbsp;+&nbsp;1&nbsp;-&nbsp;(len&nbsp;t)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;current_char(s&nbsp;&nbsp;t,chsz)&nbsp;=&nbsp;current_char(s,chsz)&nbsp;&nbsp;t<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;current_char_append_not_full_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;len_current_char&nbsp;(s,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;len&nbsp;current_char(s,chsz)&nbsp;&lt;=&nbsp;chsz&nbsp;+&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;len_current_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;current_char_has_stopbit&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;current_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char(tail&nbsp;current_char&nbsp;(s,&nbsp;chsz),chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;current_char&nbsp;(s&nbsp;&nbsp;.&lt;stopbit&gt;.,&nbsp;chsz)&nbsp;=&nbsp;.&lt;&gt;.<BR>
&nbsp;&nbsp;end&nbsp;current_char_has_stopbit;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;make&nbsp;cseq&nbsp;spec;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;&nbsp;&nbsp;</TT>
<P>
This macro is invoked in definitions <A HREF="node154.html#maclab185">185</A> and <A HREF="node171.html#maclab198">198</A>.<P>
