&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(startbit&nbsp;]-&nbsp;(c&nbsp;&nbsp;stopbit&nbsp;]-&nbsp;s),&nbsp;chsz)&nbsp;=&nbsp;c&nbsp;]-&nbsp;char_seq&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;end&nbsp;char_seq_head_bits;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_char_tail_empty&nbsp;(cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;char_tail&nbsp;(startbit&nbsp;]-&nbsp;cs,&nbsp;chsz)&nbsp;=&nbsp;.&lt;&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(startbit&nbsp;]-&nbsp;cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;has_char&nbsp;(startbit&nbsp;]-&nbsp;cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;.&lt;char_head&nbsp;(startbit&nbsp;]-&nbsp;cs,&nbsp;chsz)&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;.&lt;&gt;.&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;end&nbsp;char_seq_char_tail_empty;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_char_tail_empty_2&nbsp;(cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;head&nbsp;cs&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;char_tail&nbsp;(cs,&nbsp;chsz)&nbsp;=&nbsp;.&lt;&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;has_char&nbsp;(cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;.&lt;char_head&nbsp;(cs,&nbsp;chsz)&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;.&lt;&gt;.&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;end&nbsp;char_seq_char_tail_empty_2;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_char_tail_empty_3&nbsp;(cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;head&nbsp;cs&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;len&nbsp;cs&nbsp;=&nbsp;chsz&nbsp;+&nbsp;2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;has_char&nbsp;(cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;.&lt;char_head&nbsp;(cs,&nbsp;chsz)&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;.&lt;&gt;.&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;end&nbsp;char_seq_char_tail_empty_3;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_char_tail&nbsp;(t,&nbsp;cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;len&nbsp;cs&nbsp;=&nbsp;chsz&nbsp;+&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;t<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;cs<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(startbit&nbsp;]-&nbsp;(cs&nbsp;&nbsp;t),&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;has_char&nbsp;(startbit&nbsp;]-&nbsp;cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;char_head&nbsp;(startbit&nbsp;]-&nbsp;cs,&nbsp;chsz)&nbsp;]-&nbsp;char_seq&nbsp;(t,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;char_seq&nbsp;(t,&nbsp;chsz)&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;end&nbsp;char_seq_char_tail;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_char_tail_2&nbsp;(t,&nbsp;cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;head&nbsp;cs&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;len&nbsp;cs&nbsp;=&nbsp;chsz&nbsp;+&nbsp;2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;t<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(cs&nbsp;&nbsp;t,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;has_char&nbsp;(cs,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;char_head&nbsp;(cs,&nbsp;chsz)&nbsp;]-&nbsp;char_seq&nbsp;(t,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;char_seq&nbsp;(t,&nbsp;chsz)&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;end&nbsp;char_seq_char_tail_2;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_singleton&nbsp;(b,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;b&nbsp;in&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(.&lt;b&gt;.,&nbsp;chsz)&nbsp;=&nbsp;.&lt;&gt;.<BR>
&nbsp;&nbsp;end&nbsp;char_seq_singleton;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;has_char_char_seq_not_null&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;not&nbsp;null&nbsp;char_seq(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;has_char_char_seq_not_null;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_seq_char_tail_has_char&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq(char_tail(s,chsz),chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;tail&nbsp;char_seq(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_seq_char_tail_has_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;axiom&nbsp;char_seq_monotonic&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;s1&nbsp;.&lt;=.&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_seq&nbsp;(s1,chsz)&nbsp;.&lt;=.&nbsp;char_seq&nbsp;(s2,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_seq_monotonic;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;</TT>
