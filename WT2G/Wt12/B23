&nbsp;&nbsp;end&nbsp;char_size_non_negative;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_size_of_tack&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_size&nbsp;(char_tail&nbsp;(s,&nbsp;chsz),&nbsp;chsz)&nbsp;=&nbsp;char_size&nbsp;(s,&nbsp;chsz)&nbsp;-&nbsp;1<BR>
&nbsp;&nbsp;end&nbsp;char_size_of_tack;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;has_char_len_rest&nbsp;(e,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;in&nbsp;int&nbsp;()<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;has_char&nbsp;(e,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;len&nbsp;e&nbsp;&gt;=&nbsp;chsz&nbsp;+&nbsp;2<BR>
&nbsp;&nbsp;end&nbsp;has_char_len_rest;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;has_char_tail_len_rest&nbsp;(e,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;has_char&nbsp;(e,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;len&nbsp;tail&nbsp;e&nbsp;&gt;=&nbsp;chsz<BR>
&nbsp;&nbsp;end&nbsp;has_char_tail_len_rest;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;has_char_bits_empty&nbsp;(s)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;has_char&nbsp;(startbit&nbsp;]-&nbsp;(stopbit&nbsp;]-&nbsp;s),&nbsp;0)&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;end&nbsp;has_char_bits_empty;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;has_char_bits&nbsp;(c,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(startbit&nbsp;]-&nbsp;(c&nbsp;&nbsp;stopbit&nbsp;]-&nbsp;s),&nbsp;chsz)&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;end&nbsp;has_char_bits;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;not_has_char_not_empty&nbsp;(e,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(.&lt;startbit,&nbsp;e&gt;.,&nbsp;chsz)&nbsp;=&nbsp;false<BR>
&nbsp;&nbsp;end&nbsp;not_has_char_not_empty;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;not_has_char_not_stopbit&nbsp;(e,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;e&nbsp;=&nbsp;stopbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(.&lt;startbit,&nbsp;e&gt;.,&nbsp;chsz)&nbsp;=&nbsp;false<BR>
&nbsp;&nbsp;end&nbsp;not_has_char_not_stopbit;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;not_has_char_bits_sub&nbsp;(e,&nbsp;c,&nbsp;cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;cs&nbsp;.&lt;=.&nbsp;c<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(e&nbsp;]-&nbsp;cs,&nbsp;chsz)&nbsp;=&nbsp;false<BR>
&nbsp;&nbsp;end&nbsp;not_has_char_bits_sub;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;not_has_char_bits_sub_char&nbsp;(c,&nbsp;cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;cs&nbsp;.&lt;=.&nbsp;c<BR>
