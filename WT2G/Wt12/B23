&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;function&nbsp;char_tail&nbsp;(s,&nbsp;chsz);<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;bool_has_char&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;typeof&nbsp;has_char&nbsp;(s,&nbsp;chsz)&nbsp;=&nbsp;bool&nbsp;()<BR>
&nbsp;&nbsp;end&nbsp;bool_has_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;bool_is_char&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;typeof&nbsp;is_char&nbsp;(s,&nbsp;chsz)&nbsp;=&nbsp;bool&nbsp;()<BR>
&nbsp;&nbsp;end&nbsp;bool_is_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;is_char_length&nbsp;(c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;len&nbsp;c&nbsp;=&nbsp;chsz<BR>
&nbsp;&nbsp;end&nbsp;is_char_length;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;is_char_length_empty&nbsp;(c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;(&nbsp;&nbsp;&nbsp;&nbsp;c&nbsp;=&nbsp;.&lt;&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;=&nbsp;0)<BR>
&nbsp;&nbsp;end&nbsp;is_char_length_empty;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;is_char_is_trace_of&nbsp;(c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;c&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;end&nbsp;is_char_is_trace_of;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;is_char_0_size&nbsp;(c)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;0)&nbsp;=&nbsp;(c&nbsp;=&nbsp;.&lt;&gt;.)<BR>
&nbsp;&nbsp;end&nbsp;is_char_0_size;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;is_char_if_right_size&nbsp;(c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;len&nbsp;c&nbsp;=&nbsp;chsz<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;is_char&nbsp;(c,&nbsp;chsz)&nbsp;=&nbsp;c&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;end&nbsp;is_char_if_right_size;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_head_subseq&nbsp;(c,&nbsp;e1,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;c&nbsp;&nbsp;.&lt;e1&gt;.&nbsp;.&lt;=.&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;tr!get_first_n&nbsp;(s,&nbsp;chsz&nbsp;+&nbsp;1)&nbsp;=&nbsp;c&nbsp;&nbsp;.&lt;e1&gt;.<BR>
&nbsp;&nbsp;end&nbsp;char_head_subseq;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;but_last_tack_last&nbsp;(e0,&nbsp;e1,&nbsp;c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;nlast&nbsp;e0&nbsp;]-&nbsp;(c&nbsp;&nbsp;.&lt;e1&gt;.)&nbsp;=&nbsp;e0&nbsp;]-&nbsp;c<BR>
&nbsp;&nbsp;end&nbsp;but_last_tack_last;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;is_char_head_char&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
