&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;c&nbsp;&nbsp;.&lt;1&gt;.&nbsp;.&lt;=.&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;not&nbsp;(some&nbsp;c2:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;istrace&nbsp;c2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c2,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;c2&nbsp;&nbsp;.&lt;1&gt;.&nbsp;.&lt;=.&nbsp;s1)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;tr!remove_first_n&nbsp;(s1,&nbsp;chsz&nbsp;+&nbsp;1)&nbsp;=&nbsp;.&lt;&gt;.<BR>
&nbsp;&nbsp;end&nbsp;remove_first_n_empty;<BR>
