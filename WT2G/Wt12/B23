&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;is_char&nbsp;(char_head&nbsp;(s,&nbsp;chsz),&nbsp;chsz)<BR>
&nbsp;&nbsp;end&nbsp;is_char_head_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;is_trace_char_tack&nbsp;(c,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;istrace&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;istrace&nbsp;char_tack&nbsp;(c,&nbsp;s)<BR>
&nbsp;&nbsp;end&nbsp;is_trace_char_tack;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;has_char_tack&nbsp;(c,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;istrace&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(char_tack&nbsp;(c,&nbsp;s),&nbsp;chsz)<BR>
&nbsp;&nbsp;end&nbsp;has_char_tack;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;is_trace_remove_first_n&nbsp;(e1,&nbsp;c,&nbsp;s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;c&nbsp;&nbsp;.&lt;e1&gt;.&nbsp;.&lt;=.&nbsp;s<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;is_char&nbsp;(c,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;istrace&nbsp;tr!remove_first_n&nbsp;(s,&nbsp;chsz&nbsp;+&nbsp;1)&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;end&nbsp;is_trace_remove_first_n;<BR>
&nbsp;&nbsp;</TT><TT><BR>
