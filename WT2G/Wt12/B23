&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;len&nbsp;cs&nbsp;=&nbsp;chsz&nbsp;+&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;t<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_tail&nbsp;(startbit&nbsp;]-&nbsp;(cs&nbsp;&nbsp;t),&nbsp;chsz)&nbsp;=&nbsp;t<BR>
&nbsp;&nbsp;end&nbsp;char_tail_append;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_tail_append_2&nbsp;(t,&nbsp;cs,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;head&nbsp;cs&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;len&nbsp;cs&nbsp;=&nbsp;chsz&nbsp;+&nbsp;2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;t<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_tail&nbsp;(cs&nbsp;&nbsp;t,&nbsp;chsz)&nbsp;=&nbsp;t<BR>
&nbsp;&nbsp;end&nbsp;char_tail_append_2;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;in_char_is_char&nbsp;(c,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;c&nbsp;in&nbsp;char_set&nbsp;(chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;is_char&nbsp;(c,<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;if&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;chsz<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;0&nbsp;end&nbsp;if)<BR>
&nbsp;&nbsp;end&nbsp;in_char_is_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;formatted_char_is_trace_of_rule&nbsp;(t1)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;t1&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;((startbit&nbsp;]-&nbsp;(t1&nbsp;&nbsp;.&lt;stopbit&gt;.))&nbsp;*?&nbsp;-{0,&nbsp;1}-)&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;formatted_char_is_trace_of_rule;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;is_char_length_rule&nbsp;(c,chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;is_char(c,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;len&nbsp;(c)&nbsp;=&nbsp;chsz<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;is_char_length_rule;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;has_char_start&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char&nbsp;(s,&nbsp;chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(head&nbsp;s)&nbsp;=&nbsp;startbit<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;has_char_start;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_tail_monotonic&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s1&nbsp;.&lt;=.&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(char_tail&nbsp;(s1,chsz)&nbsp;.&lt;=.&nbsp;char_tail&nbsp;(s2,chsz))&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_tail_monotonic;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;char_head_subseq_same&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s2&nbsp;*?&nbsp;-{0,1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s1&nbsp;.&lt;=.&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;has_char(s1,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(char_head&nbsp;(s1,chsz)&nbsp;=&nbsp;char_head&nbsp;(s2,chsz))&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;char_head_subseq_same;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;has_char_subseq&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;s1&nbsp;.&lt;=.&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s2&nbsp;*?&nbsp;-{0,1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;has_char(s1,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;has_char&nbsp;(s2,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;has_char_subseq;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;tail_append_not_null&nbsp;(s1,&nbsp;s2)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;null&nbsp;s1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;istrace&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(tail&nbsp;s1)&nbsp;&nbsp;s2&nbsp;=&nbsp;tail&nbsp;(s1&nbsp;&nbsp;s2)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;tail_append_not_null;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;has_char_subseq_char_tail&nbsp;(s1,&nbsp;s2,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;s1&nbsp;.&lt;=.&nbsp;s2<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;not&nbsp;has_char(s1,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;and&nbsp;has_char&nbsp;(s2,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;char_tail(s1,chsz)=.&lt;&gt;.<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;has_char_subseq_char_tail;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;len_char_tail&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;chsz&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(len&nbsp;char_tail(s,chsz))<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;=&nbsp;if&nbsp;(len&nbsp;s)&nbsp;&gt;=&nbsp;(chsz&nbsp;+&nbsp;2)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;then&nbsp;(len&nbsp;s)&nbsp;-&nbsp;(chsz&nbsp;+&nbsp;2)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;else&nbsp;0&nbsp;end&nbsp;if<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;len_char_tail;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;frule&nbsp;len_has_char&nbsp;(s,&nbsp;chsz)&nbsp;=<BR>
&nbsp;&nbsp;&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;has_char(s,chsz)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;(len&nbsp;s)&nbsp;&gt;=&nbsp;(chsz&nbsp;+&nbsp;2)<BR>
&nbsp;&nbsp;&nbsp;&nbsp;end&nbsp;len_has_char;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;char_tail_is_trace_of&nbsp;(bs,chsz)&nbsp;=<BR>
