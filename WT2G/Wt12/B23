&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;load&nbsp;nset;<BR>
&nbsp;&nbsp;load&nbsp;tr;<BR>
&nbsp;&nbsp;load&nbsp;pr;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;nilfix&nbsp;startbit&nbsp;start_bit;<BR>
&nbsp;&nbsp;nilfix&nbsp;stopbit&nbsp;stop_bit;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;function&nbsp;start_bit&nbsp;();<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;in_bit_startbit&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;startbit&nbsp;in&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;end&nbsp;in_bit_startbit;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;startbit_not_1&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;startbit&nbsp;=&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;startbit&nbsp;=&nbsp;0<BR>
&nbsp;&nbsp;end&nbsp;startbit_not_1;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;startbit_not_0&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;startbit&nbsp;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;startbit&nbsp;=&nbsp;1<BR>
&nbsp;&nbsp;end&nbsp;startbit_not_0;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;function&nbsp;stop_bit&nbsp;();<BR>
&nbsp;&nbsp;grule&nbsp;in_bit_stopbit&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;stopbit&nbsp;in&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;end&nbsp;in_bit_stopbit;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;stopbit_not_0&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;stopbit&nbsp;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;stopbit&nbsp;=&nbsp;1<BR>
&nbsp;&nbsp;end&nbsp;stopbit_not_0;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;stopbit_not_1&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;stopbit&nbsp;=&nbsp;1<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;stopbit&nbsp;=&nbsp;0<BR>
&nbsp;&nbsp;end&nbsp;stopbit_not_1;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;function&nbsp;char_set&nbsp;(chsz);<BR>
&nbsp;&nbsp;grule&nbsp;char_set_not_empty&nbsp;(chsz)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;not&nbsp;char_set&nbsp;(chsz)&nbsp;=&nbsp;{}<BR>
&nbsp;&nbsp;end&nbsp;char_set_not_empty;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;</TT>
<B>&lt;</B><I>Definition of even</I><B>&gt;</B><B>[</B><A HREF="node148.html#maclab135">135</A><B>]</B><A NAME=14147>&#160;</A> <TT></TT><TT><BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;</TT>
<B>&lt;</B><I>Definition of sum</I><B>&gt;</B><B>[</B><A HREF="node148.html#maclab136">136</A><B>]</B><A NAME=14156>&#160;</A> <TT></TT><TT><BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;grule&nbsp;sum_ge_0&nbsp;(s)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;s&nbsp;*?&nbsp;-{0,&nbsp;1}-<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;sum&nbsp;(s)&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;end&nbsp;sum_ge_0;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;even_0&nbsp;()&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;even&nbsp;(0)&nbsp;=&nbsp;true<BR>
&nbsp;&nbsp;end&nbsp;even_0;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;rule&nbsp;even_plus1_not_even&nbsp;(i)&nbsp;=<BR>
&nbsp;&nbsp;begin<BR>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;i&nbsp;&gt;=&nbsp;0<BR>
&nbsp;&nbsp;&nbsp;&nbsp;-&gt;&nbsp;even&nbsp;(i&nbsp;+&nbsp;1)&nbsp;=&nbsp;(not&nbsp;even&nbsp;(i))<BR>
&nbsp;&nbsp;end&nbsp;even_plus1_not_even;<BR>
&nbsp;&nbsp;</TT><TT><BR>
&nbsp;&nbsp;</TT>
<B>&lt;</B><I>Definition of even_parity_chars</I><B>&gt;</B><B>[</B><A HREF="node148.html#maclab134">134</A><B>]</B><A NAME=14165>&#160;</A> <TT></TT><TT><BR>
