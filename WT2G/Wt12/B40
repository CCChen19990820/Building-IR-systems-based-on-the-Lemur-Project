	<tr>
		<td NOWRAP align = right>First Name:</td>
		<td><INPUT NAME="fname" TYPE="text" SIZE="20"><br></td>
		<td align = right>*Last Name:</td>
		<td><INPUT NAME="lname" TYPE="text" SIZE="30"><br></td>
