<TITLE>AUG-AGEN</TITLE>

<META NAME="GENERATOR" CONTENT="Internet Assistant for Word 1.0Z">
<META NAME="SUBJECT" CONTENT="AUGUST 11, 1995 BOARD AGENDA">
<META NAME="AUTHOR" CONTENT="Saundra McDaniel">
