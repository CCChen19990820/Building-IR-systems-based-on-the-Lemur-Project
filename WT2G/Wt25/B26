var scrtxt="Check our new product information now available under Import Direct.";

var lentxt=scrtxt.length;
var width =200;
var pos=1-width;

function fiscroll() {
  pos++;
  var scroller="";
  if (pos==lentxt) {
    pos=1-width;
  }
  if (pos<) {
    for (var i=1; i<=Math.abs(pos); i++) {
