<TR><TD WIDTH=103><FONT SIZE=1 FACE="Arial">Oklahoma</FONT></TD>
<TD WIDTH=89><CENTER><FONT SIZE=1 FACE="Arial">35.4</FONT></CENTER>
</TD><TD WIDTH=80><CENTER><FONT SIZE=1 FACE="Arial">32.7</FONT></CENTER>
</TD><TD WIDTH=90><CENTER><FONT SIZE=1 FACE="Arial">23</FONT></CENTER>
</TD><TD WIDTH=77><CENTER><FONT SIZE=1 FACE="Arial">30</FONT></CENTER>
</TD><TD WIDTH=77><CENTER><FONT SIZE=1 FACE="Arial">21.6</FONT></CENTER>
</TD><TD WIDTH=96><CENTER><FONT SIZE=1 FACE="Arial">46.7</FONT></CENTER>
</TD></TR>
<TR><TD WIDTH=103><FONT SIZE=1 FACE="Arial">Oregon</FONT></TD>
<TD WIDTH=89><CENTER><FONT SIZE=1 FACE="Arial">42.4</FONT></CENTER>
</TD><TD WIDTH=80><CENTER><FONT SIZE=1 FACE="Arial">41.3</FONT></CENTER>
</TD><TD WIDTH=90><CENTER><FONT SIZE=1 FACE="Arial">71.4</FONT></CENTER>
</TD><TD WIDTH=77><CENTER><FONT SIZE=1 FACE="Arial">38.3</FONT></CENTER>
</TD><TD WIDTH=77><CENTER><FONT SIZE=1 FACE="Arial">29.6</FONT></CENTER>
</TD><TD WIDTH=96><CENTER><FONT SIZE=1 FACE="Arial">57.6</FONT></CENTER>
</TD></TR>
<TR><TD WIDTH=103><FONT SIZE=1 FACE="Arial">Penn.</FONT></TD>
<TD WIDTH=89><CENTER><FONT SIZE=1 FACE="Arial">40.75</FONT></CENTER>
</TD><TD WIDTH=80><CENTER><FONT SIZE=1 FACE="Arial">39.9</FONT></CENTER>
</TD><TD WIDTH=90><CENTER><FONT SIZE=1 FACE="Arial">47.2</FONT></CENTER>
