<TR><TD align="left">John Dingell</TD><td align="right">D</TD><TD align="left">Michigan</TD><td align="right">16<br></TD></TR>
<TR><TD align="left">Bruce Vento</TD><td align="right">D</TD><TD align="left">Minnesota</TD><td align="right">4<br></TD></TR>
<TR><TD align="left">Martin Olav Sabo</TD><td align="right">D</TD><TD align="left">Minnesota</TD><td align="right">5<br></TD></TR>
