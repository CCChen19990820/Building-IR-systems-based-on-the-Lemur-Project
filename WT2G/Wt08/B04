<html>
  <head>
    <title>Register Page</title>
    <SCRIPT language="JavaScript">

      // JavaScript Form Validation Demo
      // by Paul Colton
      function submit_page(form) {

      foundError = false;

      // NOW LET'S CHECK THAT THE FIELDS ARE VALID

      if (isFieldBlank(form.email)== true)
      {
      alert("You must specify a valid email address.");
      foundError=true;
      }
      // Now make sure the email is valid
      if(foundError == false && isValidEmail(form.email) == false) {
      alert("You must specify a valid email address.");
      foundError = true;
      }

      if(foundError == false) {
      return true;
      }
      return false;
      }
      
      // Check for a blank field
      function isFieldBlank(theField) {
      if(theField.value == "")
      return true;
      else
      return false;
      }

      // Check for a valid email address (Does it contain a "@")
      function isValidEmail(theField) {
      if(theField.value.indexOf('@', 0) == -1)
      return false;
      else
      return true;
      }



    </SCRIPT>
    
  </head>

