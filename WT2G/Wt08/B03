<BODY BGCOLOR="#FFFFFF">
<map  name="header">
<area  shape="rect" coords="457,0,475,57" href="http://www.sciam.com/" TARGET="_top"></area>
<area  shape="rect" coords="353,41,444,57" href="/cgi-bin/sciam.pl" TARGET="_top"></area>
<area  shape="rect" coords="353,20,444,38" href="../letters/index.html" TARGET="_top"></area>
