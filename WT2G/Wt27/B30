<!-- Row # 2 -->
<Tr><Td align=center><Center>A</CENTER></Td><Td align=center><Center>  920 Hz</CENTER></Td><Td align=center><Center>1000 Hz</CENTER></Td><Td align=center><Center>1080 Hz</CENTER></Td><Td align=center><Center>1160 Hz</CENTER></Td></Tr>

<!-- Row # 3 -->
