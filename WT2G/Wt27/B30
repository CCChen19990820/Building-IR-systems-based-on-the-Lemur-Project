<!-- Row # 15 -->
<Tr><Td align=center>1</Td><Td align=center>0</Td><Td align=center>1</Td><Td align=center>1</Td><Td align=center>0</Td><Td align=center>0</Td></Tr>

<!-- Row # 16 -->
