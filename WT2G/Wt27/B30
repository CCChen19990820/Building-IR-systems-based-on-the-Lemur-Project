<!-- Row # 6 -->
<Tr><Td align=left>103</Td><Td align=left>Transmitted Data</Td><Td align=center>X</Td><Td align=center>&#151</Td><Td align=center>X</Td><Td align=center>&#151</Td><Td align=center>X</Td><td>&nbsp;</TD></Tr>

<!-- Row # 7 -->
<Tr><Td align=left>104</Td><Td align=left>Received Data</Td><Td align=center>&#151</Td><Td align=center>X</Td><Td align=center>&#151</Td><Td align=center>X</Td><Td align=center>X</Td><Td align=center>X</Td></Tr>

<!-- Row # 8 -->
<Tr><Td align=left>105</Td><Td align=left>Request to Send</Td><Td align=center>&#151</Td><Td align=center>&#151</Td><Td align=center>&#151</Td><Td align=center>&#151</Td><Td align=center>X</Td><Td align=center>X</Td></Tr>

