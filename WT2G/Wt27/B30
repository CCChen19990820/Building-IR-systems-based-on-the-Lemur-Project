<!-- Row # 21 -->
<Tr><Td align=left>122</Td><Td align=left>Backward Channel Received Line Signal Detector</Td><Td align=center>&#151</Td><Td align=center>&#151</Td><Td align=center>X</Td><Td align=center>&#151</Td><Td align=center>&#151</Td><Td align=center>X</Td></Tr>

<!-- Row # 22 -->
