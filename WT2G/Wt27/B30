<Tr><td align=Center COLSPAN=2>&nbsp;</TD><Td align=Center COLSPAN=2 VALIGN=bottom><B>Without Backward Channel</B></Td><Td align=Center COLSPAN=2 VALIGN=bottom><B>With Backward Channel</B></Td><td align=Center COLSPAN=2>&nbsp;</TD></Tr>

<!-- Row # 4 -->
<Tr><Td align=left width=50><B>No.</B></Td><Td align=center width=500><B>Designation</B></Td><Td align=center VALIGN=bottom width=100><B> Transmit End</B></Td><Td align=center VALIGN=bottom width=100><B>Receive End</B></Td><Td align=center VALIGN=bottom width=100><B>Transmit End</B></Td><Td align=center VALIGN=bottom width=100><B> Receive End</B></Td><Td align=center VALIGN=bottom width=100><B>Without Backward Channel</B></Td><Td align=center VALIGN=bottom width=100><B>With Backward Channel</B></Td></Tr>

