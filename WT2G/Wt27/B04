  <!-- $MVD$:APP("MicroVision WebExpress") -->
  <META NAME="AUTHOR" CONTENT="Kehoe, White, Savage &amp; Company, Inc.">
  <TITLE>Press Release: EDO Corporation Takes Actions to Align All Shareholder
  Interests; Frank A. Fariello Elected Chairman of the Board of Directors;
  Ira Kaplan Appointed Executive Vice President and Chief Operating Officer
  </TITLE>
</HEAD>
<BODY>
<!-- $MVD$:COLOR("2","0","Black") -->
<!-- $MVD$:COLOR("3","ff0000","Blue") -->
<!-- $MVD$:COLOR("4","ffff00","Cyan") -->
<!-- $MVD$:COLOR("5","ff00","Green") -->
