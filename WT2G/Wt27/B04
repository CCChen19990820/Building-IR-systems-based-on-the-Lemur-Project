<TITLE>Press Release: EDO Corporation Awarded Contract For GPS Satellite Earth Sensor; Total Contract With Options Valued at $28 Million </TITLE>
<META NAME="AUTHOR" CONTENT="Kehoe, White, Savage &amp; Company, Inc."></HEAD>

<!-- $MVD$:COLOR("2","0","Black") -->
<!-- $MVD$:COLOR("3","ff0000","Blue") -->
<!-- $MVD$:COLOR("4","ffff00","Cyan") -->
<!-- $MVD$:COLOR("5","ff00","Green") -->
<!-- $MVD$:COLOR("6","ff00ff","Magenta") -->
<!-- $MVD$:COLOR("7","ff","Red") -->
<!-- $MVD$:COLOR("8","ffff","Yellow") -->
<!-- $MVD$:COLOR("9","ffffff","White") -->
<!-- $MVD$:COLOR("10","7f0000","Dk Blue") -->
<!-- $MVD$:COLOR("11","7f7f00","Dk Cyan") -->
<!-- $MVD$:COLOR("12","7f00","Dk Green") -->
