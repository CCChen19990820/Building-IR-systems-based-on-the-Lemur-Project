<script language="JavaScript">
<!-- Begin code, parece ser que esta funcion es de dominio publico, hubiera sido >
<!-- mejor una clase de java pero asi funciona>
function scrollit_r2l(seed)
{
 var m1  = "HACKER THE WORLD!!!!!!     ";
 var m2  = "HACKER THE WORLD!!!!!!     ";
 var m3  = "HACKER THE WORLD!!!!!!     ";
 var m4  = "HACKER THE WORLD!!!!!!     ";
     var msg=m1+m2+m3+m4;    
     var out = " ";
     var c   = 1;
       if (seed > 100) {
                seed--;
               var cmd="scrollit_r2l(" + seed + ")";
               timerTwo=window.setTimeout(cmd,100);
       }
        else if (seed <= 100 && seed > 0) {
               for (c=0 ; c < seed ; c++) {
                       out+=" ";
               }
                out+=msg;
               seed--;
              var cmd="scrollit_r2l(" + seed + ")";
                    window.status=out;
                timerTwo=window.setTimeout(cmd,100);
        }
        else if (seed <= 0) {
                if (-seed < msg.length) {
                        out+=msg.substring(-seed,msg.length);
                        seed--;
                        var cmd="scrollit_r2l(" + seed + ")";
                        window.status=out;
                        timerTwo=window.setTimeout(cmd,100);
                }
                else {
                        window.status=" ";
                        timerTwo=window.setTimeout("scrollit_r2l(100)",75);
                }
       }
}
// -- End code -->
</script>

