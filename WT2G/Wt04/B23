<MAP NAME="nuk02bs">
<AREA SHAPE=RECT COORDS="13,3,41,31" HREF="hotnews.html" onMouseOver="moveover('Current Page'); return true">
<AREA SHAPE=RECT COORDS="45,4,69,30" HREF="index.html" onMouseOver="moveover('Pathways to Destruction'); return true">
<AREA SHAPE=RECT COORDS="70,4,94,29" HREF="maps.html" onMouseOver="moveover('Nuclear World Map'); return true">
