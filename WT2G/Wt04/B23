<AREA SHAPE="RECT" COORDS="46,52,76,96" HREF="../no.nukes/decom.html" onMouseOver="moveover('Decomissioning'); return true">
<AREA SHAPE="RECT" COORDS="15,41,43,72" HREF="../no.nukes/spent.html" onMouseOver="moveover('Spent Fuel'); return true">
<AREA SHAPE="RECT" COORDS="82,5,111,39" HREF="../no.nukes/repro.html" onMouseOver="moveover('Fuel Reprocessing'); return true">
<AREA SHAPE="RECT" COORDS="55,17,79,51" HREF="../no.nukes/react.html" onMouseOver="moveover('Nuclear Reactors'); return true">
<AREA SHAPE="RECT" COORDS="25,1,51,27" HREF="../no.nukes/minfab.html" onMouseOver="moveover('Mining and Fabrication'); return true">
