    <LI>  a. 500 mls
    <LI>  0.2
    <LI>  50 mg/min
    <LI>  E&gt;FF and UV&gt;GFR x P<sub>A</sub>
</OL>

<OL TYPE=1 START=2>
    <LI>  a. E<sub>X</sub> = 0.1 E<sub>Y</sub> = 0.6 E<sub>Z</sub> = 0.3
    <LI>  1.2 ml/min
    <LI>  8.0 ml/min
    <LI>  Y E&gt;FF 0.06 mg secreted/min
    <LI>  Z only filtered 0.06 filtered/min E = FF
    <LI>  X
</OL>

<OL TYPE=1 START=3>
    <LI>  a. 50 ml/min
    <LI>  E<sub>X</sub> = 0.2
    <LI>  GFR = 25 ml/min
    <LI>  100 ml/min
    <LI>  200 ml/min
    <LI>  5.0 mg/min
    <LI>  15 ml/min
</OL>

<OL TYPE=1 START=4>
    <LI>  a. 630 ml/min = C<sub>X</sub>
    <LI>  ERPF = 700 ml/min
    <LI>  E<sub>X</sub> = 0.9
    <LI>  1321 ml/min = RBF
</OL>

<OL TYPE=1 START=5>
    <LI>  GFR = 127.6 ml/min<BR>
           C<sub>Inulin</sub> = 127.6 ml/min<BR>
           E<sub>Inulin</sub> = 0.80<BR>
           RPF = 159.5 ml/min<BR>
           RBF = 290 ml/min
</OL>

