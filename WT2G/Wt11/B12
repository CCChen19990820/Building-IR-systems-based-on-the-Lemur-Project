        <TD ALIGN=CENTER> 10.0</TD>
        <TD ALIGN=CENTER> 5.0</TD>
        <TD ALIGN=CENTER> 1.0</TD>
    </TR>
    <TR>
				<TD></TD>
				<TD></TD>
				<TD></TD>
				<TD></TD>
    </TR>
    <TR>
