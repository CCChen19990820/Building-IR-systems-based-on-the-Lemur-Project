<HEAD>
   <TITLE>Respondent's Brief - June 4, 1996</TITLE>
   <META NAME="AUTHOR" CONTENT="Hernandez, Esteban">
   <META NAME="SUMMARY" CONTENT="California v. Gregory Peck">
   <META NAME="KEYWORDS" CONTENT="Coptic, Ganja, ganja, Marijuana, marijuana">
   <META NAME="GENERATOR" CONTENT="Mozilla/3.0b5aGold (Win95; I) [Netscape]">
