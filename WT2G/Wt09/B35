<head>

<title>What's Happening at GW Law</title>
<SCRIPT LANGUAGE="JavaScript">
<!--Copyright 1996 Michael A. Briggs Jr.-->
<!--This code may not be used, copied or modified without-->
<!--the consent of the author.-->
<!-- hide script

brws_ok = !(navigator.userAgent.indexOf ("Mozilla/3") == -1)

this_button = "";
past_button = "";
button_url = "http://128.164.161.15/";

function button (button_name) {
  if (brws_ok) {
    this.button_new = new Image (50,50);
    this.button_new.src = button_url+button_name + "s.gif";
    this.button_old = new Image (50,50);
    this.button_old.src = button_url+button_name + ".gif";
  }
}

function moff () {
  if (brws_ok) {
    if (this_button != "") {
    document.images [this_button].src = button [past_button].button_old.src;
    }
    past_button = "";
    this_button = "";
  }
}

function mover (button_tag) {
  if (brws_ok) {
 
    this_button = button_tag;
    if (this_button != past_button) {
        document [this_button].src = button [this_button].button_new.src;
    if (past_button != "") {
        document.images [past_button].src = button [past_button].button_old.src;
    }
        past_button = this_button;
    }
  }
}

function make_button (button_name) {
  if (brws_ok) {
    button [button_name] = new button (button_name);
  }
}

if (brws_ok) {
  make_button ("george");
}
//-->
</SCRIPT>

</head>

