<!-- received="Tue Jan  7 19:03:11 1997 EST" -->
<!-- sent="07 Jan 97 19:06:09 EST" -->
<!-- name="ASBAREZ-ON-LINE" -->
<!-- email="76635.2505@CompuServe.COM" -->
