 <OPTION VALUE="89.97,-75.03,37.54,24.69"> CESAD
 <OPTION VALUE="-82.4,-75.42,37.52,33.56"> CESAW
 <OPTION VALUE="-84.59,-80.8,35.15,29.76"> CESAS
 <OPTION VALUE="-84.79,-79.51,32.17,24.3"> CESAJ
 <OPTION VALUE="-82.7,-78.31,36.25,31.67"> CESAC
 <OPTION VALUE="-89.97,-83.39,35.25,29.56"> CESAM
 <OPTION VALUE="-124.63,-105.41,43.62,30.77"> CESPD
 <OPTION VALUE="-121.05,-107.6,39.44,30.97"> CDSPL
 <OPTION VALUE="-123.24,-105.41,43.62,34.56"> CESPK
 <OPTION VALUE="-124.53,-120.35,43.32,34.76"> CESPN
 <OPTION VALUE="-108.99,-89.87,39.54,25.39"> CESWD
 <OPTION VALUE="-103.41,-93.35,38.94,33.06"> CESWT
 <OPTION VALUE="-103.22,-92.97,34.76,26.39"> CESWF
 <OPTION VALUE="-99.33,-93.26,31.17,25.19"> CESWG
 <OPTION VALUE="-94.75,-89.97,37.75,33.86"> CESWL
 <OPTION VALUE="-108.79,-100.93,39.34,28.48"> CESWA
