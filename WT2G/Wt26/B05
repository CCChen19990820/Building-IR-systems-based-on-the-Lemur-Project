	<td width=5 rowspan=2>&nbsp;</td>



	<td valign=top rowspan=2 width=155>



	

	<table width=155 align=left cellpadding=5>

	<tr><td>



		<img border=0 src="/Images/Newsmakers/Gates/road.gif" width=155 height=32>



		<img border=0 src="/Images/Newsmakers/Gates/gatesb_clip.gif" width=155 height=116>



		<a href="/Video/Newsmakers/Gates/book.mov"><img border=0 src="/Images/Newsmakers/quicktime.gif" width=80 height=16 border=0></a><font size=-1> 905K</font>



		<a href="/Video/Newsmakers/Gates/book.avi"><img border=0 src="/Images/Newsmakers/avi.gif" width=80 height=16 border=0></a><font size=-1> 1192K</font>

	

