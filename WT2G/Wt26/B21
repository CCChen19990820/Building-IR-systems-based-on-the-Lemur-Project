<AREA SHAPE=RECT COORDS="0,253,107,273" HREF="/Dispatch/Entry/0,65,,00.html">

<AREA SHAPE=RECT COORDS="0,273,107,293" HREF="http://registration.cnet.com/MemberServices/1,9,,00.html?webAbbrev=ne&from=http://www.news.com">

<AREA SHAPE=RECT COORDS="0,293,107,313" HREF="/Staff/index.html?ntb.staff">

