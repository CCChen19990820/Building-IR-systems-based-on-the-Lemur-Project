<TR><TD>1992</TD><TD>29.9</TD><TD>32.3</TD><TD>49.6</TD><TD>68.9</TD><TD>59.9</TD></TR>
<TR><TD>1993</TD><TD>37.6</TD><TD>40.7</TD><TD>55.8</TD><TD>71.0</TD><TD>62.2</TD></TR>
<TR><TD>1994</TD><TD>33.8</TD><TD>46.2</TD><TD>54.5</TD><TD>71.7</TD><TD>62.0</TD></TR>
